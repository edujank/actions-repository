name: Exercicio 2

  on:
    push:
    
  env:
    VAR_1: Eduardo Jankovski
    VAR_2: Curitiba
   
  jobs:
  
    checkout_code:
      name: Checkout do codigo
      runs-on: ubuntu-latest
      env:
        VAR_JOB: 36
        
      steps:
        - name: Checkout repo
          uses: actions/checkout@v3.3.0
          
        - name: Upload a build artefact
          uses: actions/upload-artifact@v3.1.2
          with:
            name: ${{ vars.NOME }}
            path: .
        
